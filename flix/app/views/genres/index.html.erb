<ul class="genres">
	<% @genres.each do |genre| %>
		<li><%= link_to genre.name, genre_path(genre) %></li>
	<% end %>
</ul>
<% if current_user_admin? %>
	<%= form_for(@genre) do |f| %>
	<%= render "shared/errors", object: @genre %>
		<fieldset>
			<ol>
				<li class="required">
					<%= f.label :name %>
					<%= f.text_field :name %>
				</li>
			</ol>
			<%= f.submit %>	
		</fieldset>
	<% end %>
<% end %>