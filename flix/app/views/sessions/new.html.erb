<header>
  <h1>Sign In</h1>
</header>

<%= form_tag(session_path) do %>
  <fieldset>
    <ol>
      <li>
        <%= label_tag :email %>
        <%= email_field_tag :email, nil, autofocus: true, size: 40, required: true %>
      </li>
      <li>
      	<%= label_tag :password %>
      	<%= password_field_tag :password, nil, size: 40, required: true %>
      </li>
      <p>
      	<%= submit_tag "Sign In" %>
      	<%= link_to "Need to sign up?", signup_path %>
      </p>
    </ol>
  </fieldset>
<% end %>